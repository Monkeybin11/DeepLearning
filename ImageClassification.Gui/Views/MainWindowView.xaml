<controls:MetroWindow x:Class="Wkiro.ImageClassification.Gui.Views.MainWindowView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:converters="clr-namespace:Wkiro.ImageClassification.Gui.Helpers.Converters"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:helpers="clr-namespace:Wkiro.ImageClassification.Gui.Helpers"
                      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:viewModels="clr-namespace:Wkiro.ImageClassification.Gui.ViewModels"
                      Title="Images Classification"
                      Width="815"
                      Height="700"
                      MinWidth="815"
                      MinHeight="700"
                      d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel,
                                                       IsDesignTimeCreatable=True}"
                      mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="CaptionStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="0 3" />
        </Style>
        <converters:ListOfStringsToStringConverter x:Key="ListOfStringsToStringConverter" />
        <converters:ListOfIntsToStringConverter x:Key="ListOfIntsToStringConverter" />
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  General options  -->
        <GroupBox Header="General options"
                  IsEnabled="{Binding ProgramState,
                                      Converter={StaticResource EnumToBooleanConverter},
                                      ConverterParameter=Initial}"
                  Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="18" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="2" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Train files location path  -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Style="{StaticResource CaptionStyle}"
                           Text="Train files location path" />

                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Margin="0 0 5 0"
                             VerticalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             Text="{Binding DataProviderConfiguration.TrainFilesLocationPath}" />
                    <Button Grid.Column="1"
                            Command="{Binding BrowseForTrainFilesPathCommand}"
                            Content="Browse"
                            Padding="10 3" />
                </Grid>

                <!--  File extensions  -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Style="{StaticResource CaptionStyle}"
                           Text="File extensions" />

                <TextBox Grid.Row="1"
                         Grid.Column="2"
                         Margin="0 2 0 0"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         controls:TextBoxHelper.Watermark="i.e. jpg; png; gif"
                         Text="{Binding DataProviderConfiguration.FileExtensions,
                                        Converter={StaticResource ListOfStringsToStringConverter}}" />

                <!--  Crop dimensions  -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Style="{StaticResource CaptionStyle}"
                           Text="Crop dimensions" />

                <Grid Grid.Row="3" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Margin="0 0 5 0"
                               VerticalAlignment="Center"
                               Text="Width:" />
                    <TextBox Grid.Column="1"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Text="{Binding DataProviderConfiguration.CropWidth}" />
                    <TextBlock Grid.Column="2"
                               Margin="5 0 5 0"
                               VerticalAlignment="Center"
                               Text="Height:" />
                    <TextBox Grid.Column="3"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Text="{Binding DataProviderConfiguration.CropHeight}" />
                </Grid>
            </Grid>
        </GroupBox>

        <!--  Training/load selection panel  -->
        <Grid Grid.Row="1"
              HorizontalAlignment="Center"
              IsEnabled="{Binding ProgramState,
                                  Converter={StaticResource EnumToBooleanConverter},
                                  ConverterParameter='! TrainingInProgress'}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Width="200"
                    Height="30"
                    Margin="10"
                    Command="{Binding ConfigureNewTrainingCommand}"
                    Content="Configure new training"
                    Visibility="{Binding ProgramState,
                                         Converter={StaticResource EnumToVisibilityConverter},
                                         ConverterParameter='Initial'}" />
            <Button Grid.Column="1"
                    Width="200"
                    Height="30"
                    Margin="10"
                    Command="{Binding LoadSavedNetworkCommand}"
                    Content="Load saved network"
                    Visibility="{Binding ProgramState,
                                         Converter={StaticResource EnumToVisibilityConverter},
                                         ConverterParameter='Initial'}" />
            <Button Grid.Column="2"
                    Width="200"
                    Height="30"
                    Margin="10"
                    Command="{Binding ReconfigureCommand}"
                    Content="Reconfigure"
                    Visibility="{Binding ProgramState,
                                         Converter={StaticResource EnumToVisibilityConverter},
                                         ConverterParameter='! Initial'}" />
        </Grid>

        <!--  Training settings  -->
        <Grid Grid.Row="2" IsEnabled="{Binding ProgramState, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter='! TrainingInProgress'}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <GroupBox Height="220"
                      Header="Global training settings"
                      Visibility="{Binding ProgramState,
                                           Converter={StaticResource EnumToVisibilityConverter},
                                           ConverterParameter='ConfiguringTraining, TrainingInProgress'}">
                <StackPanel>
                    <!--  Layers configuration  -->
                    <TextBlock Text="Layers configuration" />
                    <TextBox controls:TextBoxHelper.Watermark="i.e. 600; 300; 400; 20" Text="{Binding GlobalTrainerConfiguration.Layers, Converter={StaticResource ListOfIntsToStringConverter}}" />

                    <!--  Train data ratio  -->
                    <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                        <TextBlock Margin="0 0 4 0" Text="Train data ratio" />
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="{Binding ElementName=TrainDataRatioSlider,
                                                  Path=Value,
                                                  StringFormat={}({0:F2})}" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0 0 8 0"
                                   VerticalAlignment="Center"
                                   Text="Test" />
                        <Slider x:Name="TrainDataRatioSlider"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                IsSnapToTickEnabled="True"
                                Maximum="1"
                                Minimum="0"
                                TickFrequency="0.01"
                                Value="{Binding GlobalTrainerConfiguration.TrainDataRatio}" />
                        <TextBlock Grid.Column="2"
                                   Margin="8 0 0 0"
                                   VerticalAlignment="Center"
                                   Text="Train" />
                    </Grid>

                    <!--  Processing dimensions  -->
                    <TextBlock Margin="0 10 0 0" Text="Processing dimensions" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Margin="0 0 5 0"
                                   VerticalAlignment="Center"
                                   Text="Width:" />
                        <TextBox Grid.Column="1"
                                 Margin="0 2 0 0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding GlobalTrainerConfiguration.ProcessingWidth}" />
                        <TextBlock Grid.Column="2"
                                   Margin="5 0 5 0"
                                   VerticalAlignment="Center"
                                   Text="Height:" />
                        <TextBox Grid.Column="3"
                                 Margin="0 2 0 0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding GlobalTrainerConfiguration.ProcessingHeight}" />
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Column="1"
                      Height="220"
                      Header="Tr. #1 params (unsupervised)"
                      Visibility="{Binding ProgramState,
                                           Converter={StaticResource EnumToVisibilityConverter},
                                           ConverterParameter='ConfiguringTraining, TrainingInProgress'}">
                <StackPanel>
                    <TextBlock Text="Learning rate" />
                    <TextBox Text="{Binding Training1Parameters.LearningRate}" />
                    <TextBlock Text="Momentum" />
                    <TextBox Text="{Binding Training1Parameters.Momentum}" />
                    <TextBlock Text="Unsupervised Epochs" />
                    <TextBox Text="{Binding Training1Parameters.UnsupervisedEpochs}" />
                    <TextBlock Text="Decay" />
                    <TextBox Text="{Binding Training1Parameters.Decay}" />
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Column="2"
                      Height="220"
                      Header="Tr. #2 params (supervised)"
                      Visibility="{Binding ProgramState,
                                           Converter={StaticResource EnumToVisibilityConverter},
                                           ConverterParameter='ConfiguringTraining, TrainingInProgress'}">
                <StackPanel>
                    <TextBlock Text="Learning rate" />
                    <TextBox Text="{Binding Training2Parameters.LearningRate}" />
                    <TextBlock Text="Momentum" />
                    <TextBox Text="{Binding Training2Parameters.Momentum}" />
                    <TextBlock Text="Supervised Epochs" />
                    <TextBox Text="{Binding Training2Parameters.SupervisedEpochs}" />
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Column="3"
                      Height="220"
                      Header="Categories"
                      Visibility="{Binding ProgramState,
                                           Converter={StaticResource EnumToVisibilityConverter},
                                           ConverterParameter='! Initial'}">
                <helpers:BindableListBox x:Name="CategoriesListBox"
                                         ItemsSource="{Binding AvailableCategories}"
                                         SelectedItemsList="{Binding SelectedCategories,
                                                                     UpdateSourceTrigger=PropertyChanged,
                                                                     Mode=TwoWay}"
                                         SelectionMode="Multiple">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectedCategoriesChangedCommand}" CommandParameter="{Binding ElementName=CategoriesListBox, Path=SelectedItems}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <helpers:BindableListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </helpers:BindableListBox.ItemTemplate>
                </helpers:BindableListBox>
            </GroupBox>
        </Grid>

        <!--  Classify settings  -->
        <Grid Grid.Row="3">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="200"
                        Height="40"
                        Margin="10"
                        Command="{Binding StartTrainingCommand}"
                        Content="Start training"
                        FontSize="18"
                        Visibility="{Binding ProgramState,
                                             Converter={StaticResource EnumToVisibilityConverter},
                                             ConverterParameter='ConfiguringTraining'}" />
                <Button Width="200"
                        Height="40"
                        Margin="10"
                        Command="{Binding ClassifyImageCommand}"
                        Content="Classify image"
                        FontSize="18"
                        Visibility="{Binding ProgramState,
                                             Converter={StaticResource EnumToVisibilityConverter},
                                             ConverterParameter='ClassifierReady'}" />
                <Button Width="200"
                        Height="40"
                        Margin="10"
                        Command="{Binding SaveNetworkCommand}"
                        Content="Save network"
                        FontSize="18"
                        Visibility="{Binding ProgramState,
                                             Converter={StaticResource EnumToVisibilityConverter},
                                             ConverterParameter='ClassifierReady'}" />
            </StackPanel>
        </Grid>

        <!--  Log box  -->
        <Grid Grid.Row="4">
            <GroupBox Header="Output" Padding="3">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         Text="{Binding OutputTextBoxContent}"
                         TextChanged="OnLogTextBoxTextChanged"
                         VerticalScrollBarVisibility="Auto" />
            </GroupBox>
        </Grid>
    </Grid>
</controls:MetroWindow>

